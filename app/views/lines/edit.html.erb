<h1>Edit Line</h1>


<%= form_for(@line, url: line_path(@line.number)) do |f| %>
  <div class="form-group">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>
  <div class="form-group">
    <% @stations.each do |station| %>
    <%= check_box_tag "line[station_ids][]", station.id,  @line.station_ids.include?(station.id) %>
    <%= station.name %><br/>
    <% end %>
  </div>
  <%= f.submit(:class => "btn btn-warning") %>
<% end %>

<h1>Create new Bus</h1>


<%= form_for(@bus, url: line_buses_path(@line.number)) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="hidden">
    <%= f.label :id %>
    <%= f.text_field :id %>
  </div>
  <%= f.submit(:class => "btn btn-warning") %>
<% end %>

